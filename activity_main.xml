<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/ima1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/main_imageview_lefttop"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Easy Packing"
        android:textSize="40dp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="70dp"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/main_sign_up"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="450dp"
        android:text="Sign up"
        android:textColor="#FFFFFF"
        android:background="@drawable/sign_button_in_background"
        />
    <Button
        android:id="@+id/main_sign_in"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginLeft="110dp"
        android:layout_below="@id/main_sign_up"
        android:layout_marginTop="20dp"
        android:text="Sign in"
        android:textColor="#000000"
        android:background="@drawable/sign_button_up_background"
        />


</RelativeLayout>