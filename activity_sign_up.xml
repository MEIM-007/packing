<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Sign_up_Activity">
    <Button
        android:id="@+id/sign_up_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/back1"
        android:layout_margin="20dp"/>
    <ImageView
        android:id="@+id/user"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="130dp"
        android:src="@drawable/user"/>
    <EditText
        android:id="@+id/sign_up_account"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_margin="40dp"
        android:layout_below="@id/user"
        android:hint="account:"
        />
    <EditText
        android:id="@+id/sign_up_password"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_below="@id/sign_up_account"
        android:hint="password:"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/sign_up_eye"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="300dp"
        android:background="@android:color/transparent"
    />
    <ImageView
        android:id="@+id/sign_up_eye_photo"
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="300dp "
        android:src="@drawable/close_eye"
        />
    <EditText
        android:id="@+id/sign_up_telephone_number"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_margin="40dp"
        android:layout_below="@id/sign_up_password"
        android:hint="telephone number:"
        />
    <Button
        android:id="@+id/sign_up_summit"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/sign_up_telephone_number"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:background="@drawable/sign_button_up_background"
        android:text="summit"
        />

</RelativeLayout>